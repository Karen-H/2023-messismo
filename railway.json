{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd backend && java -jar target/*.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300
  }
}